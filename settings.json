{
	"window.commandCenter": true,
	"window.customTitleBarVisibility": "auto",
	"window.density.editorTabHeight": "compact",
	"window.newWindowDimensions": "inherit",

	"workbench.colorTheme": "GitHub Dark Default",
	"workbench.activityBar.location": "hidden",
	"workbench.layoutControl.enabled": false,
	"workbench.statusBar.visible": true,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.editor.empty.hint": "hidden",
	"workbench.list.smoothScrolling": true,
	"workbench.editor.tabSizing": "shrink",
	"workbench.editor.showIcons": true,
	"workbench.panel.defaultLocation": "bottom",
	"workbench.tree.enableStickyScroll": true,
	"workbench.fontAliasing": "antialiased",
	"workbench.startupEditor": "none",
	"workbench.tips.enabled": false,
	"breadcrumbs.enabled": false,

	"editor.fontFamily": "'FiraCode Nerd Font', 'JetBrainsMono Nerd Font', 'Font Awesome 6 Free', 'monospace', monospace",
	"editor.fontSize": 16,
	"editor.lineHeight": 28.5,
	"editor.fontWeight": "500",
	"editor.fontLigatures": true,
	"editor.tabSize": 4,
	"editor.folding": true,
	"editor.insertSpaces": false,
	"editor.minimap.enabled": false,
	"editor.detectIndentation": true,
	"editor.matchBrackets": "always",
	"editor.colorDecorators": true,
	"editor.hideCursorInOverviewRuler": true,
	"editor.suggestSelection": "first",
	"editor.multiCursorModifier": "alt",
	"editor.formatOnSave": true,
	"editor.scrollBeyondLastLine": true,
	"editor.linkedEditing": true,
	"editor.renderControlCharacters": true,
	"editor.quickSuggestionsDelay": 0,
	"editor.bracketPairColorization.enabled": false,
	"editor.lightbulb.enabled": "off",
	"editor.glyphMargin": false,
	"editor.accessibilitySupport": "off",
	"editor.wordWrap": "off",
	"editor.padding.top": 15,
	"editor.scrollbar.horizontal": "auto",
	"editor.scrollbar.vertical": "auto",
	"editor.overviewRulerBorder": false,
	"editor.smoothScrolling": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.inlineSuggest.suppressSuggestions": true,
	"editor.renderWhitespace": "all",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.copyWithSyntaxHighlighting": false,
	"editor.suggestFontSize": 15,
	"editor.suggestLineHeight": 30,
	"editor.stickyScroll.enabled": true,
	"editor.guides.indentation": false,

	"editor.cursorBlinking": "expand",
	"editor.cursorStyle": "line-thin",
	"editor.cursorSmoothCaretAnimation": "explicit",

	"terminal.integrated.fontFamily": "'Fira Code'",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.lineHeight": 1.1,
	"terminal.integrated.fontWeight": "500",
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.cursorStyle": "block",
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.defaultProfile.linux": "bash",
	"terminal.integrated.defaultLocation": "panel",

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.compactFolders": false,

	"workbench.colorCustomizations": {
		"editorWhitespace.foreground": "#2F2F2F"
	},

	"editor.formatOnPaste": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"prettier.semi": false,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"prettier.arrowParens": "avoid",

	"html.format.enable": true,
	"html.format.wrapLineLength": 0,
	"html.autoClosingTags": true,
	"html.completion.attributeDefaultValue": "singlequotes",

	"blade.format.enable": true,
	"bladeFormatter.format.useTabs": true,
	"bladeFormatter.format.noSingleQuote": false,
	"bladeFormatter.format.noMultipleEmptyLines": true,
	"bladeFormatter.format.wrapAttributes": "force-expand-multiline",
	"bladeFormatter.format.wrapLineLength": 9999999999,
	"bladeFormatter.format.wrapAttributesMinAttrs": 4,
	"bladeFormatter.format.indentSize": 1,
	"bladeFormatter.format.indentInnerHtml": true,
	"bladeFormatter.format.customHtmlAttributesOrder": "href, type, name, id, class",
	"bladeFormatter.format.sortHtmlAttributes": "custom",
	"[blade]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "shufo.vscode-blade-formatter"
	},

	"css.format.enable": true,
	"css.format.spaceAroundSelectorSeparator": true,
	"[css]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"scss.format.enable": true,
	"scss.format.spaceAroundSelectorSeparator": true,
	"[scss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"json.format.enable": true,
	"json.format.keepLines": true,
	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"javascript.format.enable": true,
	"javascript.format.placeOpenBraceOnNewLineForFunctions": true,
	"javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
	"javascript.format.insertSpaceBeforeFunctionParenthesis": true,
	"javascript.format.insertSpaceAfterTypeAssertion": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
	"javascript.format.insertSpaceAfterConstructor": true,
	"javascript.preferences.quoteStyle": "single",
	"javascript.autoClosingTags": true,
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"typescript.format.enable": true,
	"typescript.format.placeOpenBraceOnNewLineForFunctions": true,
	"typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
	"typescript.format.insertSpaceBeforeFunctionParenthesis": true,
	"typescript.format.insertSpaceAfterTypeAssertion": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingTemplateStringBraces": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
	"typescript.format.insertSpaceAfterConstructor": true,
	"typescript.preferences.quoteStyle": "single",
	"typescript.autoClosingTags": true,
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"[shellscript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "foxundermoon.shell-format"
	},

	"laravel-pint.enable": true,
	"laravel-pint.enableDebugLogs": true,
	"laravel-pint.executablePath": "./vendor/bin/pint",
	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "open-southeners.laravel-pint"
	},
	"intelephense.format.enable": false,
	"intelephense.references.exclude": [],
	"Laravel.translation.diagnostics": false,
	"namespaceResolver.sortAlphabetically": true,
	"namespaceResolver.sortOnSave": true,
	"namespaceResolver.showMessageOnStatusBar": true,

	"[nix]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "kamadorueda.alejandra"
	},
	"alejandra.program": "alejandra",

	"emmet.includeLanguages": {
		"blade": "html",
		"vue-html": "html",
		"vue": "html"
	},

	"files.associations": {
		".blade.php": "blade",
		".tpl": "html"
	}
}
